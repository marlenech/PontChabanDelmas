<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:background="@color/colorPrimary"

        >

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_apropos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="65dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="7dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"

    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorPrimaryDark"

            >
            <FrameLayout
                android:id="@+id/contourhaut"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary2"/>
            <FrameLayout
                android:id="@+id/contourbas"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary2"/>
            <!-- Mentions -->

            <ImageView
                android:id="@+id/developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_contact_mail_black_24dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"/>


            <TextView android:id="@+id/mentions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/devlop"
                android:paddingLeft="40.0dp"
                android:paddingTop="10dp"
                android:textSize="14.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_regular"/>


            <TextView android:id="@+id/indep"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/indep"
                android:paddingLeft="40.0dp"
                android:paddingTop="10dp"
                android:textSize="13.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_thin"
                android:layout_below="@id/mentions"
                />




            <TextView android:id="@+id/contact"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact1"
                android:paddingLeft="40.0dp"
                android:paddingTop="10dp"
                android:paddingBottom="20.0dp"
                android:textSize="13.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_thin"
                android:layout_below="@id/indep"

                />

            <View
                android:id="@+id/ligne"
                android:layout_height="0.2dp"
                android:background="@color/gris"
                android:layout_width="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/contact"
                />

            <!-- Informations -->

            <ImageView
                android:id="@+id/informations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_help_black_24dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:layout_below="@id/ligne"/>

            <TextView android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info"
                android:paddingLeft="40.0dp"
                android:paddingTop="10dp"
                android:textSize="14.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_regular"
                android:layout_below="@id/ligne">
            </TextView>

            <TextView android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info1"
                android:paddingLeft="40.0dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="20.0dp"
                android:textSize="13.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_thin"
                android:layout_below="@id/info">
            </TextView>

            <View
                android:id="@+id/ligne3"
                android:layout_height="0.2dp"
                android:background="@color/gris"
                android:layout_width="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/info1"
                />

            <!-- Liens officiels -->

            <ImageView
                android:id="@+id/liens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_language_black_24dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:layout_below="@id/ligne3"/>

            <TextView android:id="@+id/site1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/site1"
                android:paddingLeft="40.0dp"
                android:paddingTop="10dp"
                android:textSize="14.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_regular"
                android:layout_below="@id/ligne3">
            </TextView>

            <TextView android:id="@+id/lien_site1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/lien_site1"
                android:paddingLeft="40.0dp"
                android:paddingTop="10dp"
                android:textSize="13.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_thin"
                android:layout_below="@id/liens">
            </TextView>

            <TextView android:id="@+id/lien_opendata"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/lien_opendata"
                android:paddingLeft="40.0dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="20.0dp"
                android:textSize="13.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_thin"
                android:layout_below="@id/lien_site1"
                />

            <View
                android:id="@+id/ligne4"
                android:layout_height="0.2dp"
                android:background="@color/gris"
                android:layout_width="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/lien_opendata"
                />

            <!-- Liens tres utiles -->

            <ImageView
                android:id="@+id/liens2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_thumb_up_black_24dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:layout_below="@id/ligne4"/>

            <TextView android:id="@+id/lien_utiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/liens_utiles"
                android:paddingLeft="40.0dp"
                android:paddingTop="10dp"
                android:textSize="14.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_regular"
                android:layout_below="@id/ligne4">
            </TextView>

            <TextView android:id="@+id/lien_blog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/blog"
                android:paddingLeft="40.0dp"
                android:paddingTop="10dp"
                android:textSize="13.0sp"
                android:textColor="@color/gris_text"
                android:fontFamily="@font/roboto_thin"
                android:layout_below="@id/lien_utiles">
            </TextView>

            <TextView android:id="@+id/blog1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/blog1"
                android:paddingLeft="40.0dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:textSize="13.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_thin"
                android:layout_below="@id/lien_blog"
                />

            <TextView android:id="@+id/lien_twitter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/blog"
                android:paddingLeft="40.0dp"
                android:paddingTop="2dp"
                android:textSize="13.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_thin"
                android:layout_below="@id/blog1">
            </TextView>

            <TextView android:id="@+id/bridgeman"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/bridgeman"
                android:paddingLeft="40.0dp"
                android:paddingRight="16dp"
                android:paddingTop="2dp"
                android:paddingBottom="20.0dp"
                android:textSize="13.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_thin"
                android:layout_below="@id/lien_twitter"
                />

            <View
                android:id="@+id/ligne5"
                android:layout_height="0.2dp"
                android:background="@color/gris"
                android:layout_width="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/bridgeman"
                />

            <!-- Licence -->

            <ImageView
                android:id="@+id/licence_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_insert_drive_file_black_24dp"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:layout_below="@id/ligne5"/>

            <TextView android:id="@+id/licence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/licence"
                android:paddingLeft="40.0dp"
                android:paddingTop="10dp"
                android:textSize="14.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_regular"
                android:layout_below="@id/ligne5"/>


            <TextView android:id="@+id/licence_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/licence_name"
                android:paddingLeft="40.0dp"
                android:paddingTop="10dp"
                android:textSize="13.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_thin"
                android:layout_below="@id/licence"/>


            <TextView android:id="@+id/licence_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/licence_text"
                android:paddingLeft="40.0dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="20.0dp"
                android:textSize="13.0sp"
                android:textColor="@color/windowBackground"
                android:fontFamily="@font/roboto_thin"
                android:layout_below="@id/licence_name"
                />





        </RelativeLayout></androidx.cardview.widget.CardView></LinearLayout></ScrollView>

