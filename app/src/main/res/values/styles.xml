<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Police par défaut -->
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Police par défaut -->
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <!-- Police par défaut -->
    <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Police par défaut -->
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>




    <style name="titleSize" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <!-- Police par défaut -->
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="subTitleSize" parent="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="windowActionBar">true</item>
        <!-- Police par défaut -->
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/vert_clair</item>


    </style>




</resources>

